<div class="container-md py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-edit mr-1"></i>編輯支出 </h5>
          <hr>
          <form method="POST" action="/records/{{record._id}}?_method=PUT" class="was-validated">
            <div class="form-group form-row">
              <label for="record-name" class="col-md-2 col-form-label">
                支出明細
              </label>
              <div class="col-md-10">
                <input type="text" name="name" class="form-control is-invalid" id="record-name" placeholder="火雞肉飯"
                  value="{{record.name}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="record-date" class="col-md-2 col-form-label">
                消費日期
              </label>
              <div class="col-md-10">
                <input type="date" name="date" class="form-control is-invalid" id="record-date" value="{{record.date}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="record-category" class="col-md-2 col-form-label">
                類別
              </label>
              <div class="col-md-10">
                <select name="category" id="record-category" class="custom-select" required>
                  <option value="{{record.category}}">{{record.category}}</option>
                  {{#each categories}}
                  <option value="{{this.title}}">{{this.title}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="record-amount" class="col-md-2 col-form-label">
                金額
              </label>
              <div class="col-md-10">
                <input type="number" name="amount" class="form-control is-invalid" id="record-amount" placeholder="100"
                  min="1" value="{{record.amount}}" required>
                <small class="text-muted form-text">至少輸入 1 元</small>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="record-merchant" class="col-md-2 col-form-label">
                店家
              </label>
              <div class="col-md-10">
                <input type="text" name="merchant" class="form-control is-invalid" id="record-merchant" placeholder="肉伯"
                  value="{{record.merchant}}" required>
              </div>
            </div>

            <button class="btn btn-success" type="submit">儲存變更</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>